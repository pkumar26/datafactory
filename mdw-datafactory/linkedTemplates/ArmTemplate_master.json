{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "mdw-datafactory"
		},
		"AzureDataLakeStorage1_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStorage1'"
		},
		"CloudSales_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CloudSales'"
		},
		"CloudStreaming_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'CloudStreaming'"
		},
		"forthcoffee_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'forthcoffee'"
		},
		"movies_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'movies'"
		},
		"AzureDataLakeStorage1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://mdw.dfs.core.windows.net"
		},
		"forthcoffee_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Rentals"
		},
		"forthcoffee_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "openhackadmin"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureDataLakeStorage1_accountKey": {
						"value": "[parameters('AzureDataLakeStorage1_accountKey')]"
					},
					"CloudSales_connectionString": {
						"value": "[parameters('CloudSales_connectionString')]"
					},
					"CloudStreaming_connectionString": {
						"value": "[parameters('CloudStreaming_connectionString')]"
					},
					"movies_connectionString": {
						"value": "[parameters('movies_connectionString')]"
					},
					"forthcoffee_password": {
						"value": "[parameters('forthcoffee_password')]"
					},
					"AzureDataLakeStorage1_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage1_properties_typeProperties_url')]"
					},
					"forthcoffee_properties_typeProperties_host": {
						"value": "[parameters('forthcoffee_properties_typeProperties_host')]"
					},
					"forthcoffee_properties_typeProperties_userId": {
						"value": "[parameters('forthcoffee_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}